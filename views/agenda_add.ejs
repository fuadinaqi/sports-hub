<!DOCTYPE html>
<html>
  <% include ./partials/head %>
  <body>
    <% include ./partials/container %>
      <h1>Create Agenda</h1>
          <% include ./partials/error %>
      <form action="/agendas/add" method="post">
        <label for="name">Name : </label>
        <input type="text" name="name" value="" placeholder=""><br>
        <label for="place">Place : </label>
        <input type="text" name="place" value="" placeholder=""><br>
        <label for="date">Date : </label>
        <input type="date" name="date" min="<%= today%>" value="" placeholder="" required><br>
        <label for="time">Time : </label>
        <input type="time" name="time" value="" placeholder=""><br>
        <label for="max_player">Player Needs : </label>
        <input type="number" name="max_player" min="1" value="" placeholder=""><br>
        <label for="SportList">Sport : </label>
        <select name="sportListId">
          <%rowSportList.forEach(sport => {%>
            <option value="<%=sport.id%>"><%=sport.name%>
            </option>
          <%})%>
        </select><br>
        <input type="submit" name="" value="submit">
      </form>
    </div>
  </body>
</html>
